  <!-- Search form -->
  <div class="container">
    <div class="input-group md-form form-sm form-2 pl-0">
      <input class="form-control mt-4 my-0 py-1" type="text" placeholder="Search" aria-label="Search"style="border-color: #f3712f">
      <div class="input-group-append mt-4">
        <button class="btn btn-secondary" style="width: 50px; height:38px;">
          <input type="image" src="https://raw.githubusercontent.com/Si-Sa-Pi/Sew-A-Car/master/foto mobil/search (1).svg">
        </button>
        </div>
    </div>
  </div>

  <div class="container">
    <div class="card text-center" style="max-width: 3000x; background-color: transparent ">
      <div id="result" class="row row-cols-1 row-cols-md-4 mt-3">
        
        <% if (!result || result.length == 0) { %>
          <tr><td colspan="3" class="text-center"><i>We dont give a C for u</i></td></tr>            
        <% } else { %>
        <% result.forEach((car, index) => { %>
          <div class="col mb-3 ">
            <div class="card card-body h-80"style="background-color: #2f2f2b; border-color: #f3712f">
              <img src="<%= car.car_pic %>" style="width: 200px; height:110px" class="card-img-top" alt="..." >
              <div class="card-body">
                <h5 class="card-title" style="color: #f3712f"><%= car.car_name %></h5>
                <div class="float-left"style="color: #f3712f"><%= car.transmission %>
                  <img src="https://raw.githubusercontent.com/Si-Sa-Pi/Sew-A-Car/master/foto mobil/gear box.png" style="width: 24px;height: 24px;"class="float-left"></div>
                <div class="float-right"style="color: #f3712f"><%= car.seat %> Seats
                  <img src="https://raw.githubusercontent.com/Si-Sa-Pi/Sew-A-Car/master/foto mobil/seat .png" style="width: 24px;height: 24px;"class="float-left"></div><br><br>
                <div class="location-text float-left" style="color: #f3712f"><%= car.car_location %>
                  <img src="https://raw.githubusercontent.com/Si-Sa-Pi/Sew-A-Car/master/foto mobil/map-pin (1).svg"class="float-left"></div>
                <div class="gage-text float-right" style="color: #f3712f"><%= car.even_odd %>
                  <img src="https://raw.githubusercontent.com/Si-Sa-Pi/Sew-A-Car/master/foto mobil/gage.png"style="width: 25px;height: 27px;" class="float-left mr-1"></div><br><br>
                <div class="harga-text float-center" style="color: #f3712f;"><%= car.price %>/Hari</div><br>
                <a href="#" class="btn btn-primary">Rent</a>
              </div>
            </div>
          </div>
        <% }) %>
        <% } %> 
      </div>
    </div>
  </div>

<footer class="mastfoot mt-auto" style='text-align: center; padding: 3px; background-color: #2f2f2b; border-color: #f3712f; color: #f3712f;'>
  <div class="inner">
    <p>
      Want to know more about us?<br>
      <a href="https://si-sa-pi.github.io/Sew-A-Car/About.html" style="color: #f3712f;"><b>About</b></a>
    </p>
  </div> 
</footer>

